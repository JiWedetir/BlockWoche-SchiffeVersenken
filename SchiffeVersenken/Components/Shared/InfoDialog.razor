<MudDialog>
    <!-- Dynamischer Inhalt des Dialogs -->
    <DialogContent>
        <MudText>
            @((MarkupString)FormattedContentText)
        </MudText>
    </DialogContent>

    <!-- Submit-Button -->
    <DialogActions>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="Submit">Ok</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    [Parameter] public string ContentText { get; set; }

    // Replaces \n with <br> for HTML
    private string FormattedContentText => ContentText.Replace("\n", "<br>");

    void Submit() => MudDialog.Close(DialogResult.Ok(true));
}